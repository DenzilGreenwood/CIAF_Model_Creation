{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CIAF: Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/ciaf:${workspaceFolder}/validation:${workspaceFolder}/examples"
            },
            "justMyCode": false,
            "stopOnEntry": false,
            "showReturnValue": true
        },
        {
            "name": "CIAF: Debug Citation Anchor Demo",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/citation_anchor_demo.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/ciaf"
            },
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "CIAF: Debug Healthcare Demo",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/golden_paths/healthcare_samd_demo.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/ciaf"
            },
            "justMyCode": false
        },
        {
            "name": "CIAF: Debug Banking Demo",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/golden_paths/banking_sr11_7_demo.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/ciaf"
            },
            "justMyCode": false
        },
        {
            "name": "CIAF: Debug Government Demo",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/golden_paths/government_omb_m24_10_demo.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/ciaf"
            },
            "justMyCode": false
        },
        {
            "name": "CIAF: Debug Framework Validation",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/validate_frameworks.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/ciaf"
            },
            "justMyCode": false
        },
        {
            "name": "CIAF: Debug Regulatory Mappings",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/validate_regulatory_mappings.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/ciaf"
            },
            "justMyCode": false
        },
        {
            "name": "CIAF: Debug with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [],
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/ciaf"
            },
            "justMyCode": false
        },
        {
            "name": "CIAF: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "-v",
                "--tb=short"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/ciaf"
            },
            "justMyCode": false
        },
        {
            "name": "CIAF: Debug Specific Test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v",
                "--tb=short"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/ciaf"
            },
            "justMyCode": false
        },
        {
            "name": "CIAF: Attach to Process",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        }
    ]
}